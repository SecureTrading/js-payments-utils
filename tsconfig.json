{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true
  },
  "include": [
    "./src/**/*",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts" // exclude all that contain "spec.ts" in name
  ]
}
